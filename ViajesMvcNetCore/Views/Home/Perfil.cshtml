@model ViajesMvcNetCore.Models.UsuarioLogin

<link rel="stylesheet" href="~/css/styleperfil.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="profile-container">
    <div class="profile-left-section">
        <div class="additional-data-section">
            <h3>Información Adicional</h3>
            <!-- Sección eliminada: Viajes, Puntuación, Países -->
            <div class="button-group">
                <button id="lugaresInsertadosBtn" class="active">Mis Lugares</button>
                <button id="lugaresFavoritosBtn">Favoritos</button>
            </div>
            <div id="containerlugares" class="m-3"></div>
        </div>
    </div>

    <div class="profile-right-section">
        <div class="profile-action-edit">
            <a asp-controller="Home" asp-action="EditarPerfil" asp-route-idUsuario="@Model.IdUsuario" class="edit-profile-btn" title="Edit perfil">
                <i class="fas fa-pencil-alt"></i>
            </a>
        </div>

        <div class="profile-header">
            <div class="profile-avatar">
                <img src="@Model.AvatarUrl" alt="Avatar" class="avatar-img">
            </div>
            <h2 class="profile-name">@Model.Nombre</h2>
        </div>

        <div class="profile-details">
            <div class="profile-card">
                <div class="card-content">
                    <div class="detail-item">
                        <i class="fas fa-envelope"></i>
                        <div class="detail-content">
                            <span class="detail-label">Email</span>
                            <span class="detail-value">@Model.Correo</span>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-palette"></i>
                        <div class="detail-content">
                            <span class="detail-label">Color del Avatar</span>
                            <span class="detail-value">
                                <span class="avatar-color" style="background-color: @Model.ColorAvatar;"></span>
                                @Model.ColorAvatar
                            </span>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-route"></i>
                        <div class="detail-content">
                            <span class="detail-label">Preferencias de Viaje</span>
                            <span class="detail-value">@Model.PreferenciaViaje</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="leaderboard">
            <h3>Leaderboard</h3>
            <ul class="leaderboard-list">
                <li class="leaderboard-item">
                    <div class="leaderboard-user">
                        <span class="leaderboard-position">1</span>
                        <span class="leaderboard-name">Kameron Porter</span>
                    </div>
                    <span class="leaderboard-score">100%</span>
                </li>
                <li class="leaderboard-item">
                    <div class="leaderboard-user">
                        <span class="leaderboard-position">2</span>
                        <span class="leaderboard-name">Michael Kopfler</span>
                    </div>
                    <span class="leaderboard-score">95%</span>
                </li>
                <li class="leaderboard-item">
                    <div class="leaderboard-user">
                        <span class="leaderboard-position">3</span>
                        <span class="leaderboard-name">Alice Koller</span>
                    </div>
                    <span class="leaderboard-score">90%</span>
                </li>
            </ul>
        </div>

        <div class="action-section">
            <a class="btn btn-primary" asp-controller="Lugares" asp-action="Create">
                <i class="fas fa-plus-circle"></i> Crear Lugar
            </a>
        </div>
    </div>
</div>

<style>
    .button-group {
        display: flex;
        gap: 15px; /* Espacio entre los botones */
        margin-bottom: 15px;
    }

        .button-group button {
            padding: 10px 15px;
            border: 1px solid #ddd;
            background-color: #f0f0f0;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s ease;
            border-radius: 25px;
            flex: 1;
        }

            .button-group button.active {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .button-group button:hover {
                background-color: #e0e0e0;
                transform: scale(1.05);
            }

    .profile-action-edit {
        position: absolute;
        top: 15px;
        right: 15px;
        z-index: 10;
    }

    .edit-profile-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

        .edit-profile-btn:hover {
            background-color: #0056b3;
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
            color: white;
        }

        .edit-profile-btn i {
            font-size: 18px;
        }

    .profile-right-section {
        position: relative;
    }

    /* Avatar color display */
    .avatar-color {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: inline-block;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            var idUsuario = "@Model.IdUsuario";
            var request = "/Home/_Lugares?idUsuario=" + idUsuario;

            $("#containerlugares").load(request);

            $("#lugaresInsertadosBtn").click(function() {
                $(this).addClass("active").siblings().removeClass("active");
                request = "/Home/_Lugares?idUsuario=" + idUsuario;
                $("#containerlugares").load(request);
            });

            $("#lugaresFavoritosBtn").click(function() {
                $(this).addClass("active").siblings().removeClass("active");
                request = "/Home/_Favoritos?idUsuario=" + idUsuario;
                $("#containerlugares").load(request);
            });
        });
    </script>
}
