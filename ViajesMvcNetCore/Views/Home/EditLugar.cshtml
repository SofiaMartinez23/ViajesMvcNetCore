@model ViajesMvcNetCore.Models.Lugar


    <div class="container">
        <div class="mb-2">
            <a href="/Home/Perfil?id=@(Context.Session.GetInt32("IdUsuario"))" class="btn btn-outline-primary btn-lg btn-back">
                ←
            </a>
        </div>

        <h1>Editar Lugar</h1>

        <form id="editForm" asp-action="EditLugar" method="post">
            <input type="hidden" asp-for="IdLugar" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nombre" class="h5">Nombre del Lugar</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre del lugar" required>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ubicacion" class="h5">Ubicación</label>
                        <input asp-for="Ubicacion" class="form-control" placeholder="Ubicación del lugar" required>
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Categoria" class="h5">Categoría</label>
                        <input asp-for="Categoria" class="form-control" placeholder="Categoría del lugar" required>
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Horario" class="h5">Horario</label>
                        <input asp-for="Horario" type="datetime-local" class="form-control" required>
                        <span asp-validation-for="Horario" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="h5">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción del lugar" rows="4" required></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Tipo" class="h5">Tipo</label>
                        <select asp-for="Tipo" class="form-control" required>
                            <option value="Público">Público</option>
                            <option value="Privado">Privado</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Imagen" class="h5">URL Imagen</label>
                        <input asp-for="Imagen" class="form-control" placeholder="URL de la imagen del lugar" required>
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button class="btn btn-outline-primary btn-lg btn-back">Guardar Cambios</button>
        </form>
    </div>

   
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    .container {
        max-width: 800px;
        margin-top: 10px;
    }

    h1 {
        font-size: 2.5rem;
        color: #004C97;
    }

    .form-control {
        border-radius: 25px;
    }

    .btn-primary {
        background-color: #004C97;
        border-color: #004C97;
        font-weight: 500;
        border-radius: 25px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004C97;
        }

    .btn-outline-primary {
        border-color: #004C97;
        color: #004C97;
        font-weight: 500;
        border-radius: 25px;
    }

        .btn-outline-primary:hover {
            background-color: #004C97;
            color: white;
        }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-back {
        margin-top: 10px;
        margin-bottom: 5px;
    }
</style>