@model ViajesMvcNetCore.Models.Lugar

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Lugar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2c6ecd;
            --secondary-color: #f8f9fa;
            --accent-color: #ff6b6b;
            --text-color: #333;
            --light-gray: #e9ecef;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            color: var(--text-color);
            padding-bottom: 40px;
        }

        .main-container {
            max-width: 1000px;
            margin: 30px auto;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
        }

        .header-container {
            background: linear-gradient(135deg, var(--primary-color) 0%, #1a4fa0 100%);
            color: white;
            padding: 40px 30px 50px;
            position: relative;
            margin-bottom: 30px;
        }

            .header-container::after {
                content: "";
                position: absolute;
                bottom: -20px;
                left: 0;
                right: 0;
                height: 40px;
                background-color: white;
                border-radius: 50% 50% 0 0;
            }

        .form-container {
            padding: 20px 40px 40px;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .subtitle {
            opacity: 0.85;
            margin-bottom: 0;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: #495057;
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid var(--light-gray);
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 0 0.25rem rgba(44, 110, 205, 0.25);
                border-color: var(--primary-color);
                background-color: white;
            }

        .category-container {
            margin-bottom: 20px;
        }

        .category-label {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: var(--light-gray);
            border-radius: 12px;
            padding: 15px 10px;
            text-align: center;
            cursor: pointer;
            height: 100%;
            transition: all 0.3s ease;
            margin-bottom: 15px;
            border: 2px solid transparent;
        }

        .category-radio {
            display: none;
        }

            .category-radio:checked + .category-label {
                background-color: rgba(44, 110, 205, 0.1);
                border-color: var(--primary-color);
                color: var(--primary-color);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(44, 110, 205, 0.2);
            }

        .category-icon {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .submit-btn {
            background: linear-gradient(135deg, var(--primary-color) 0%, #1a4fa0 100%);
            border: none;
            color: white;
            border-radius: 10px;
            padding: 15px 30px;
            font-size: 18px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-top: 20px;
            box-shadow: 0 4px 14px rgba(44, 110, 205, 0.4);
        }

            .submit-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(44, 110, 205, 0.5);
            }

        .btn-back {
            display: inline-flex;
            align-items: center;
            background-color: transparent;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: rgba(255, 255, 255, 0.2);
                border-color: white;
                color: white;
            }

            .btn-back i {
                margin-right: 10px;
            }

        .form-group {
            margin-bottom: 25px;
        }

        .form-title {
            font-size: 1.5rem;
            color: var(--primary-color);
            margin-bottom: 25px;
            font-weight: 600;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--light-gray);
        }

        .image-preview {
            width: 100%;
            height: 200px;
            border-radius: 10px;
            background-color: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            margin-bottom: 10px;
            overflow: hidden;
            position: relative;
        }

            .image-preview img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .image-upload {
            position: relative;
        }

        .upload-btn {
            background-color: rgba(44, 110, 205, 0.1);
            color: var(--primary-color);
            border: 2px dashed var(--primary-color);
            border-radius: 10px;
            padding: 12px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .upload-btn:hover {
                background-color: rgba(44, 110, 205, 0.2);
            }

        .type-switch {
            display: flex;
            border-radius: 10px;
            overflow: hidden;
            width: 100%;
            margin-bottom: 20px;
            border: 2px solid var(--light-gray);
        }

        .type-option {
            flex: 1;
            text-align: center;
            padding: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            background-color: var(--light-gray);
            color: #6c757d;
        }

        .type-radio {
            display: none;
        }

            .type-radio:checked + .type-option {
                background-color: var(--primary-color);
                color: white;
            }
    </style>
</head>
<body>

    <div class="main-container">
        <div class="header-container">
            <a href="/Home/Perfil?id=@(Context.Session.GetInt32("IdUsuario"))" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <h1 class="mt-4">Editar Lugar</h1>
            <p class="subtitle">Actualiza la información de este lugar en nuestra plataforma</p>
        </div>

        <div class="form-container">
            <form id="editForm" asp-action="EditLugar" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="IdLugar" />

                <h2 class="form-title">Información Básica</h2>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">Nombre del Lugar</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <input asp-for="Nombre" class="form-control" placeholder="¿Cómo se llama este lugar?" value="@Model.Nombre" required>
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Ubicacion" class="form-label">Ubicación</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-location-dot"></i></span>
                                <input asp-for="Ubicacion" class="form-control" placeholder="Dirección o coordenadas" value="@Model.Ubicacion" required>
                            </div>
                            <span asp-validation-for="Ubicacion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Describe este lugar de manera atractiva..." rows="4" required>@Model.Descripcion</textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Horario" class="form-label">Horario de Apertura</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="far fa-clock"></i></span>
                                <input asp-for="Horario" type="datetime-local" class="form-control" value="@Model.Horario.ToString("yyyy-MM-ddTHH:mm")" required>
                            </div>
                            <span asp-validation-for="Horario" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Tipo de Acceso</label>
                            <div class="type-switch">
                                <input type="radio" class="type-radio" id="tipo-publico" name="Tipo" value="Publico" @(Model.Tipo == "Publico" ? "checked" : "")>
                                <label for="tipo-publico" class="type-option">
                                    <i class="fas fa-users me-2"></i> Público
                                </label>

                                <input type="radio" class="type-radio" id="tipo-privado" name="Tipo" value="Privado" @(Model.Tipo == "Privado" ? "checked" : "")>
                                <label for="tipo-privado" class="type-option">
                                    <i class="fas fa-lock me-2"></i> Privado
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <h2 class="form-title mt-4">Categoría</h2>
                <p class="mb-4">Selecciona la categoría que mejor describe este lugar:</p>

                <div class="row category-container">
                    <div class="col-4 col-md-3 col-lg-2">
                        <input type="radio" class="category-radio" id="cat-turistico" name="Categoria" value="Turístico" @(Model.Categoria == "Turístico" ? "checked" : "") required>
                        <label for="cat-turistico" class="category-label">
                            <i class="fas fa-camera category-icon"></i>
                            Turístico
                        </label>
                    </div>
                    <div class="col-4 col-md-3 col-lg-2">
                        <input type="radio" class="category-radio" id="cat-restaurante" name="Categoria" value="Restaurante" @(Model.Categoria == "Restaurante" ? "checked" : "")>
                        <label for="cat-restaurante" class="category-label">
                            <i class="fas fa-utensils category-icon"></i>
                            Restaurante
                        </label>
                    </div>
                    <div class="col-4 col-md-3 col-lg-2">
                        <input type="radio" class="category-radio" id="cat-deporte" name="Categoria" value="Deporte" @(Model.Categoria == "Deporte" ? "checked" : "")>
                        <label for="cat-deporte" class="category-label">
                            <i class="fas fa-futbol category-icon"></i>
                            Deporte
                        </label>
                    </div>
                    <div class="col-4 col-md-3 col-lg-2">
                        <input type="radio" class="category-radio" id="cat-cultura" name="Categoria" value="Cultura" @(Model.Categoria == "Cultura" ? "checked" : "")>
                        <label for="cat-cultura" class="category-label">
                            <i class="fas fa-theater-masks category-icon"></i>
                            Cultura
                        </label>
                    </div>
                    <div class="col-4 col-md-3 col-lg-2">
                        <input type="radio" class="category-radio" id="cat-naturaleza" name="Categoria" value="Naturaleza" @(Model.Categoria == "Naturaleza" ? "checked" : "")>
                        <label for="cat-naturaleza" class="category-label">
                            <i class="fas fa-leaf category-icon"></i>
                            Naturaleza
                        </label>
                    </div>
                    <div class="col-4 col-md-3 col-lg-2">
                        <input type="radio" class="category-radio" id="cat-comercial" name="Categoria" value="Comercial" @(Model.Categoria == "Comercial" ? "checked" : "")>
                        <label for="cat-comercial" class="category-label">
                            <i class="fas fa-shopping-bag category-icon"></i>
                            Comercial
                        </label>
                    </div>
                </div>

                <h2 class="form-title mt-4">Imagen del Lugar</h2>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="image-preview" id="imagePreview">
                                <i class="fas fa-image fa-3x"></i>
                                <p class="mt-2">Vista previa de la imagen</p>
                                <img id="preview-img" src="#" alt="Vista previa">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="image-upload">
                                <label for="imagen" class="upload-btn">
                                    <i class="fas fa-cloud-upload-alt fa-2x mb-2"></i>
                                    <p class="mb-0">Haz clic para seleccionar una imagen<br><small>(JPG, PNG o GIF)</small></p>
                                </label>
                                <input type="file" class="form-control d-none" id="imagen" name="fichero" accept="image/*" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="submit-btn">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Previsualización de imagen
        document.getElementById('imagen').addEventListener('change', function(e) {
            const preview = document.getElementById('preview-img');
            const file = e.target.files[0];
            const reader = new FileReader();

            reader.onloadend = function() {
                preview.src = reader.result;
                preview.style.display = 'block';
                document.querySelector('.image-preview i').style.display = 'none';
                document.querySelector('.image-preview p').style.display = 'none';
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        });
    </script>>

</body>
</html>
