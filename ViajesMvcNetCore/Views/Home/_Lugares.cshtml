@model List<LugarFavorito>
@{
    string defaultImageUrl = "https://img.freepik.com/foto-gratis/angulo-bosque-3d-arboles-rocas_23-2150800507.jpg";
}

<div class="container py-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="placesContainer">
        @foreach (var lugar in Model)
        {
            <div class="col">
                <div class="card lugar-card shadow border-0 hover-card h-100">
                    <div class="lugar-image-container position-relative overflow-hidden">
                        <img src="@(string.IsNullOrEmpty(lugar.ImagenLugar) ? defaultImageUrl : lugar.ImagenLugar)"
                             alt="@lugar.NombreLugar" class="card-img-top lugar-image"
                             onerror="this.src='@defaultImageUrl';" />
                        <div class="lugar-overlay position-absolute top-0 start-0 p-2">
                            <span class="badge bg-primary">Favorito</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title mb-1 fw-bold text-primary">@lugar.NombreLugar</h5>
                        <p class="card-subtitle mb-2 text-muted">
                            <i class="fas fa-map-marker-alt me-1"></i>@lugar.UbicacionLugar
                        </p>
                        <p class="card-text lugar-description">@lugar.DescripcionLugar</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="far fa-calendar-alt me-1"></i>@lugar.FechaDeVisitaLugar
                            </small>
                            <a asp-controller="Lugares" asp-action="Details" asp-route-idlugar="@lugar.IdLugar"
                               class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                Leer más
                            </a>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <a id="heart-@lugar.IdLugar" class="heart-link" data-id="@lugar.IdLugar" title="Eliminar de favoritos">
                                <img src="https://icon-icons.com/icons2/3870/PNG/512/save_remove_icon_243831.png" alt="Delete" class="heart-icon" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.27/dist/sweetalert2.min.css" rel="stylesheet">
<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.27/dist/sweetalert2.min.js"></script>

<script>
    $(document).ready(function() {
        $('.heart-link').click(function(e) {
            e.preventDefault();

            var idLugar = $(this).data('id');
            var card = $(this).closest('.col');

            // Usar SweetAlert para la confirmación
            Swal.fire({
                title: '¿Estás seguro?',
                text: '¿Quieres eliminar este lugar de tus favoritos?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar',
                reverseButtons: true // Cambiar el orden de los botones
            }).then((result) => {
                if (result.isConfirmed) {
                    // Si el usuario confirma, proceder a eliminar
                    $.post('/Home/DeleteFavorito', { idLugar: idLugar }, function () {
                        card.fadeOut(300, function () {
                            $(this).remove(); // Elimina la tarjeta con animación
                        });
                    }).fail(function () {
                        Swal.fire('Error', 'Error al eliminar el favorito.', 'error');
                    });
                } else {
                    // Si el usuario cancela, no hacer nada
                    Swal.fire('Cancelado', 'El lugar sigue en tus favoritos', 'info');
                }
            });
        });
    });
</script>

<style>
