@model List<Lugar>
@{
    string defaultImageUrl = "https://img.freepik.com/foto-gratis/angulo-bosque-3d-arboles-rocas_23-2150800507.jpg";
}

<div class="row g-4" id="placesContainer">
    @foreach (var lugar in Model)
    {
        <div class="col-md-6 col-lg-4 lugar-item">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="lugar-image-container">
                    <img src="@(string.IsNullOrEmpty(lugar.Imagen) ? defaultImageUrl : lugar.Imagen)"
                         alt="@lugar.Nombre" class="card-img-top lugar-image"
                         onerror="this.src='@defaultImageUrl';" />
                    <div class="lugar-overlay">
                        <span class="badge bg-primary">Lugar</span>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title mb-1 fw-bold text-primary">@lugar.Nombre</h5>
                    <p class="card-subtitle mb-2 text-muted">
                        <i class="fas fa-map-marker-alt me-1"></i>@lugar.Ubicacion
                    </p>
                    <p class="card-text lugar-description">@lugar.Descripcion</p>

                    <div class="d-flex justify-content-between align-items-center mt-3 mb-2">
                        <small class="text-muted">
                            <i class="far fa-clock me-1"></i>@lugar.Horario
                        </small>
                        <div class="action-buttons">
                            <a asp-controller="Home" asp-action="EditLugar" asp-route-idLugar="@lugar.IdLugar"
                               class="btn btn-sm btn-outline-primary rounded-circle action-btn" title="Editar">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-danger rounded-circle action-btn ms-2 delete-lugar"
                               data-id="@lugar.IdLugar" data-name="@lugar.Nombre" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white pt-0 border-0">
                    <a asp-controller="Lugares" asp-action="Details" asp-route-idlugar="@lugar.IdLugar"
                       class="btn btn-primary w-100 rounded-pill">
                        Ver más
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Incluir SweetAlert2 desde CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        // Eliminar lugar con SweetAlert
        $('.delete-lugar').click(function (e) {
            e.preventDefault();

            var idLugar = $(this).data('id');
            var lugarName = $(this).data('name');
            var card = $(this).closest('.lugar-item');

            Swal.fire({
                title: '¿Estás seguro?',
                text: `¿Deseas eliminar el lugar "${lugarName}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Home/DeleteConfirmed', { idLugar: idLugar }, function (response) {
                        // Animación de desvanecimiento al eliminar
                        card.fadeOut(300, function() {
                            $(this).remove();

                            // Mostrar mensaje de éxito
                            Swal.fire(
                                '¡Eliminado!',
                                'El lugar ha sido eliminado correctamente.',
                                'success'
                            );
                        });
                    }).fail(function() {
                        // Manejo de errores
                        Swal.fire(
                            'Error',
                            'No se pudo eliminar el lugar. Intenta nuevamente.',
                            'error'
                        );
                    });
                }
            });
        });
    });
</script>

