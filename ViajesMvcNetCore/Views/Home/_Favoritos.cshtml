        transition: all var(--transition-speed) ease;
    }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            transform: translateY(-2px);
        }

    .heart-link {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all var(--transition-speed) ease;
