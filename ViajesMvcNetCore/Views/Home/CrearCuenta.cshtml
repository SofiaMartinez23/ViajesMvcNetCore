@model ViajesMvcNetCore.Models.UsuarioLogin

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <!-- Logo igual al de Login -->
                <div class="px-5 ms-xl-4">
                    <img src="~/images/EntdGehLogo.jpg" alt="Logo EntdGeh" style="width: 180px; height: 180px;">
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 mt-2 pt-3">
                    <form method="post" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Registro</h3>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Nombre" class="form-control form-control-lg" required />
                            <label asp-for="Nombre"></label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Correo" class="form-control form-control-lg" required />
                            <label asp-for="Correo"></label>
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 password-container">
                            <input asp-for="Clave" type="password" class="form-control form-control-lg" id="claveField" required />
                            <label asp-for="Clave"></label>
                            <span class="password-toggle" onclick="togglePassword('claveField', 'toggleIconClave')">
                                <i class="bi bi-eye-slash" id="toggleIconClave"></i>
                            </span>
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 password-container">
                            <input asp-for="ConfirmarClave" type="password" class="form-control form-control-lg" id="confirmarClaveField" required />
                            <label asp-for="ConfirmarClave"></label>
                            <span class="password-toggle" onclick="togglePassword('confirmarClaveField', 'toggleIconConfirmarClave')">
                                <i class="bi bi-eye-slash" id="toggleIconConfirmarClave"></i>
                            </span>
                            <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="PreferenciaViaje" class="form-select form-select-lg" aria-label="Preferencias de Viaje" required>
                                <option value="" selected></option>
                                <option value="Turístico">Turístico</option>
                                <option value="Restaurante">Restaurante</option>
                                <option value="Deporte">Deporte</option>
                                <option value="Cultura">Cultura</option>
                                <option value="Naturaleza">Naturaleza</option>
                                <option value="Comercial">Comercial</option>
                                <option value="Educativo">Educativo</option>
                                <option value="Religioso">Religioso</option>
                                <option value="Salud">Salud</option>
                                <option value="Empresarial">Empresarial</option>
                                <option value="Transporte">Transporte</option>
                                <option value="Entretenimiento">Entretenimiento</option>
                                <option value="Aventura">Aventura</option>
                                <option value="Residencial">Residencial</option>
                                <option value="Cívico">Cívico</option>
                            </select>
                            <label asp-for="PreferenciaViaje">Preferencias de Viaje</label>
                            <span asp-validation-for="PreferenciaViaje" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ColorAvatar" class="form-label">Color del Avatar</label>
                            <input asp-for="ColorAvatar" type="color" class="form-control form-control-lg" required />
                            <span asp-validation-for="ColorAvatar" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block w-100" type="submit">Registrarse</button>
                        </div>

                        <p>¿Ya tienes una cuenta? <a asp-controller="Home" asp-action="Login">Inicia sesión aquí</a></p>
                    </form>
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                     alt="Registro image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

<h2>@ViewData["MENSAJE"]</h2>

<style>
    .bg-image-vertical {
        position: relative;
        overflow: hidden;
        background-repeat: no-repeat;
        background-position: right center;
        background-size: auto 100%;
    }

    /* Ajuste para el selector de color */
    input[type="color"] {
        height: 38px;
        padding: 0.375rem 0.75rem;
        cursor: pointer;
    }

    /* Ajuste para el formulario flotante */
    .form-floating > .form-control,
    .form-floating > .form-select {
        height: calc(3.5rem + 2px);
        padding: 1rem 0.75rem;
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
    }

    .btn-block {
        display: block;
    }

    /* Estilos para el toggle de contraseña */
    .password-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        z-index: 10;
        color: #6c757d;
    }

        .password-toggle:hover {
            color: #212529;
        }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<script>
    // Función para mostrar/ocultar la contraseña
    function togglePassword(fieldId, iconId) {
        const passwordField = document.getElementById(fieldId);
        const toggleIcon = document.getElementById(iconId);

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleIcon.classList.remove('bi-eye-slash');
            toggleIcon.classList.add('bi-eye');
        } else {
            passwordField.type = 'password';
            toggleIcon.classList.remove('bi-eye');
            toggleIcon.classList.add('bi-eye-slash');
        }
    }
</script>
