@{
    string defaultImageUrl = "https://img.freepik.com/foto-gratis/angulo-bosque-3d-arboles-rocas_23-2150800507.jpg";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    :root {
        --primary-color: #2c6e49;
        --secondary-color: #4d908e;
        --text-color: #333;
        --light-bg: #f8f9fa;
        --border-radius: 10px;
        --box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        color: var(--text-color);
        line-height: 1.6;
    }

    .container {
        max-width: 1200px;
        padding: 20px;
    }

    .place-card {
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .place-image {
        width: 100%;
        height: 350px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .place-header {
        position: relative;
        padding: 20px;
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        color: white;
    }

        .place-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.2rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
        }

    .info-section {
        padding: 20px;
    }

    h5 {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 15px;
        font-size: 1.3rem;
    }

    p {
        margin-bottom: 12px;
        font-size: 1.05rem;
    }

    .type-badge {
        display: inline-block;
        background-color: var(--secondary-color);
        color: white;
        padding: 3px 10px;
        border-radius: 20px;
        font-weight: 500;
    }

    .add-comment-section {
        background-color: var(--light-bg);
        padding: 15px;
        border-radius: var(--border-radius);
        margin-top: 20px;
        margin-bottom: 20px;
    }

    textarea.form-control {
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: border-color 0.3s;
        resize: none;
    }

        textarea.form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(44, 110, 73, 0.25);
        }

    .submit-comment-btn {
        background-color: var(--primary-color);
        border: none;
        color: white;
        font-weight: 500;
        transition: background-color 0.3s;
    }

        .submit-comment-btn:hover {
            background-color: #1a5631;
            color: white;
        }

    .comments-section {
        height: 100%;
    }

    .comments-list {
        background-color: var(--light-bg);
        border-radius: var(--border-radius);
        padding: 15px;
    }

    .btn-back {
        color: var(--primary-color);
        border-color: var(--primary-color);
        transition: all 0.3s;
    }

        .btn-back:hover {
            background-color: var(--primary-color);
            color: white;
        }

    /* Animation effects */
    .place-card:hover .place-image {
        transform: scale(1.02);
    }

   

    .place-image {
        height: 250px;
    }

    }
</style>

<div class="container">
    <!-- Keeping the exact same structure as your original -->
    <div class="place-card">
        <img src="@(string.IsNullOrEmpty(Model.Imagen) ? defaultImageUrl : Model.Imagen)"
             alt="@Model.Nombre" class="place-image" onerror="this.src='@defaultImageUrl';" />
        <div class="place-header">
            <h1>@Model.Nombre</h1>
        </div>
        <div class="row info-section">
            <div class="col-md-6">
                <h5>Detalles del Lugar</h5>
                <p>@Model.Descripcion</p>
                <p><strong>Ubicación:</strong> @Model.Ubicacion</p>
                <p><strong>Categoria:</strong> @Model.Categoria</p>
                <p><strong>Tipo:</strong> <span class="type-badge">@Model.Tipo</span></p>
                <div class="add-comment-section">
                    <h5>Añadir Comentario</h5>
                    <form asp-action="CreateComment" asp-route-idlugar="@Model.IdLugar" method="post">
                        <input type="hidden" name="idlugar" value="@Model.IdLugar" />
                        @if (Context.Session.GetInt32("IdUsuario").HasValue)
                        {
                            <textarea name="comentario" class="form-control mb-3" rows="2" placeholder="Escribe tu comentario..." required></textarea>
                            <button type="submit" class="btn submit-comment-btn w-100">Enviar Comentario</button>
                        }
                        else
                        {
                            <p>Debes iniciar sesión para dejar un comentario.</p>
                        }
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="comments-section">
                    <div class="comments-list" id="comentariosContainer">
                    </div>
                </div>
            </div>
            <div class="mb-2">
                <a asp-controller="Lugares" asp-action="Index" class="btn btn-outline-primary btn-lg btn-back">
                    ←
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Keeping your exact same JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        function cargarComentarios() {
            $("#comentariosContainer").load("/Lugares/_Comentarios?idlugar=@Model.IdLugar", function(response) {
                if ($("#comentariosContainer .comment-card").length > 3) {
                    $(".comments-list").css({
                        'max-height': '400px',
                        'overflow-y': 'auto'
                    });
                }
            });
        }
        cargarComentarios();
        $("form").on("submit", function(e) {
            e.preventDefault();
            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: $(this).serialize(),
                success: function(result) {
                    $("textarea[name='comentario']").val('');
                    cargarComentarios();
                }
            });
        });
    });
</script>